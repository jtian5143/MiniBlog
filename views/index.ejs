            <li class="list-group-item">
                <h3><a href="#"><%=post.title%></a></h3>
                <p>
                    <span><a href="/delete">Delete</a></span>
                </p>
                <p class="info">
                    <span>Authorï¼š<%=post.author%></span>
                    <span>|</span>
                    <span>Date:<%=time%></span>
                </p>
                <p>
                    <span><%=post.article%></span>
                </p>
            </li>
        </ul>
        <%}%>
    <%})%>
<%} else {%>
