<%- include header%>
<form action = "/reg" method = "post">
    <div class = "container form-group">
        <label class="col-sm-2 control-label">User name</label>
        <div class="col-sm-5">
            <input type="text" name="username" class="form-control" placeholder="Input user name"/>
        </div>
    </div>

    <div class = "container form-group">
        <label class="col-sm-2 control-label">Password</label>
        <div class="col-sm-5">
            <input type="password" name="password" class="form-control" placeholder="Input user password"/>
        </div>
    </div>

    <div class="container form-group">
        <label class="col-sm-2 control-label">Password again</label>
        <div class="col-sm-5">
            <input type="password" name="repeat-password" class="form-control" placeholder="Repeat your password"/>
        </div>
    </div>

    <div class="container form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-default" value="Sign up" />
        </div>
    </div>
</form>
<%- include footer%>